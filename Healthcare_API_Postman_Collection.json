	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "patientId",
			"value": "",
			"type": "string"
		},
		{
			"key": "doctorId",
			"value": "",
